		<task:scheduled ref="taskDDtoMTH" method="mongoToParGatrMTH" cron="0 0 6 * * *" />
		<task:scheduled ref="taskDDtoMTH" method="revisionMTH" cron="0 20 16 * * *" />
		
<!-- 		<task:scheduled ref="taskDDtoMTH" method="dataMigration" cron="0 54 11 12 * *" /> -->
		
	</task:scheduled-tasks>
	<task:scheduler id="mySchedulerAdverMTHhh" />

	<!-- * * 23 * * * -->
	<!-- Seconds YES 0-59 , - * / -->
	<!-- Minutes YES 0-59 , - * / -->
	<!-- Hours YES 0-23 , - * / -->
	<!-- Day of month YES 1-31 , - * ? / L W -->
	<!-- Month YES 1-12 or JAN-DEC , - * / -->
	<!-- Day of week YES 1-7 or SUN-SAT , - * ? / L # -->
	<!-- Year NO empty, 1970-2099 , - * / -->

</beans>
